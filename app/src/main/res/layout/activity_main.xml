<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/EnterIPAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:hint="@string/enter_ip_address"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <EditText
        android:id="@+id/EnterPortNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_port"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/EnterIPAddress"
        android:autofillHints="" />
    <Switch
        android:id="@+id/enable_udp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_sending"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EnterPortNumber"/>



</android.support.constraint.ConstraintLayout>